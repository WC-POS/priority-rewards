{
  "name": "priority-rewards-sync",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "main": "main/index.js",
  "author": {
    "name": "Devin Sharpe"
  },
  "description": "Electron desktop application used for syning FPOS databases to the PriorityRewards Cloud.",
  "keywords": [
    "vite",
    "react",
    "electron"
  ],
  "repository": {
    "url": "https://github.com/devinsharpe/priority-rewards"
  },
  "productName": "priority-rewards-sync",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@iconscout/react-unicons": "^1.1.6",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.25.0",
    "electron": "^15.3.0",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^4",
    "getmac": "^5.20.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "sequelize": "^6.8.0",
    "vite": "^2.6.2",
    "zustand": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "concurrently": "^6.3.0",
    "electron-builder": "^22.10.5",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "prettier": "2.4.1",
    "typescript": "^4.4.3"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
